@model IEnumerable<AppLibros.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1 id="tituloHome">Libros</h1>

@using (Html.BeginForm()) 
{
<div class="vista">
    <label for="busqueda1">Buscar por título</label>
    <p id="busqueda1">
        @Html.TextBox("testo")
    </p>
    <input type="submit" asp-action="Search" value="Buscar"/>
</div>
}


<table class="table">
    <thead class="vista">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.votos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="vista">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.votos)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.id">Detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>
