@model IEnumerable<AppLibros.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1>Libros</h1>

@using (Html.BeginForm()) 
{
<div>
    <label for="busqueda1">Buscar por titulo</label>
    <p id="busqueda1">
        @Html.TextBox("testo")
    </p>
    <input type="submit" asp-action="buscarLibro" value="Buscar"/>
</div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.votos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.votos)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
