@model AppLibros.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1 id="tituloHome">@Html.DisplayFor(model => model.username)</h1>
<div class="vista">
    <div>
        <h4>Detalles</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.apellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.apellido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.edad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.edad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.username)
            </dd>
        </dl>
    </div>
    <hr />
    <div>
        <div class="favoritos">
            @Html.DisplayNameFor(model => model.librosFavoritos)
            <br>
            @foreach (var item in Model.librosFavoritos)
            {
                var idLibro = new { id = item.id };
                @Html.ActionLink(item.titulo, "Details", "Libro", idLibro)
                <br>
            }
        </div>
        <div class="favoritos">
            @Html.DisplayNameFor(model => model.autoresFavoritos)
            <br>
            @foreach (var item in Model.autoresFavoritos)
            {
                var idAutor = new { id = item.id };
                item.nombre = item.nombre + " " + item.apellido;
                @Html.ActionLink(item.nombre, "Details", "Autor", idAutor)
                <br>
            }
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="Edit" asp-route-id="@Model.id">Editar</a>
        @if (Context.Session.GetString("esAdmin") == "True")
        {
            <a asp-action="Index">Volver al indice</a>
        }
    </div>
    </div>